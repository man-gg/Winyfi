# UniFi Controller Configuration
# Copy this file to .env and update with your settings

# UniFi Controller URL (Machine A)
# Format: https://<controller-ip>:8443 or http://<controller-ip>:8080
# Examples:
#   Local: https://127.0.0.1:8443
#   Remote: https://192.168.1.100:8443
UNIFI_URL=https://127.0.0.1:8443

# UniFi Controller Credentials
UNIFI_USER=admin
UNIFI_PASS=admin123

# UniFi Site ID (usually "default")
UNIFI_SITE=default

# SSL Verification (set to false for self-signed certificates)
# Set to true only if you have a valid SSL certificate
UNIFI_VERIFY=false

# Flask API Server Configuration
FLASK_DEBUG=false
ALLOW_NO_AUTH=true

# API Keys (comma-separated, optional)
# Leave empty to allow all requests when ALLOW_NO_AUTH=true
API_KEYS=
ADMIN_API_KEYS=

# Allowed Sites (comma-separated)
ALLOWED_SITES=default

# Mock Mode (for testing without real controller)
ENABLE_MOCK=false

# HTTP Timeout Settings
HTTP_TIMEOUT=15
HTTP_RETRY_TOTAL=2
HTTP_RETRY_BACKOFF=0.3

# WinyFi Dashboard Configuration (Machine B)
# Set this to the IP of Machine A where unifi_api.py runs
# Format: http://<machine-a-ip>:5001
WINYFI_UNIFI_API_URL=http://localhost:5001
